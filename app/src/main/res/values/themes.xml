<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoodLight" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#212121</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#212121</item>
        <item name="colorSecondaryVariant">#212121</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#212121</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- no Title Bar -->
    </style>

    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="dark_theme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="switchStyle" >
        <item name="colorControlActivated">#212121</item>
    </style>

    <style name="switchStyleHappy" >
        <item name="colorControlActivated">#f5cf66</item>
    </style>

    <style name="switchStyleMad" >
        <item name="colorControlActivated">#ed5d4c</item>
    </style>

    <style name="switchStyleSad" >
        <item name="colorControlActivated">#10699e</item>
    </style>

</resources>