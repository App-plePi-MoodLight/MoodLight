<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.main2.MainFragment2">

    <data>
        <variable
            name="viewModel"
            type="com.example.moodlight.screen.main2.Main2ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/main2Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="나의 감정일지"
                android:textSize="18sp"
                android:textColor="#212121"
                android:fontFamily="@font/roboto_bold"
                />
        </Toolbar>

        <TextView
            android:id="@+id/main2DateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@{viewModel.month}"
            android:textColor="#212121"
            android:textSize="19sp"
            android:fontFamily="@font/notosanskr_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main2Toolbar"
            />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main2DateTv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/calendar_background"
            android:orientation="vertical"
            android:elevation="7dp"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="일"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="월"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="화"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="수"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="목"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="금"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="토"/>
            </LinearLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/main2CalendarRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:spanCount="7"
               app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
               />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>