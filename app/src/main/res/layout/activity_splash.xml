<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.splash.SplashActivity">

    <ImageView
        android:id="@+id/splashIv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/splashTv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기분을 밝히다"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#b1b1b1"
        android:textSize="18sp"
        android:layout_marginTop="16sp"
        android:lineSpacingExtra="0.14sp"
        app:layout_constraintTop_toBottomOf="@id/splashIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무드등"
        android:fontFamily="@font/tmonmonsori"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="2sp"
        app:layout_constraintTop_toBottomOf="@id/splashTv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>